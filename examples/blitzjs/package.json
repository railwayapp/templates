{
  "name": "blitzjs",
  "version": "1.0.0",
  "scripts": {
    "dev": "blitz dev",
    "start": "blitz start --port ${PORT-3000}",
    "studio": "blitz prisma studio",
    "build": "yarn migrate:deploy && blitz build",
    "start:production": "blitz start --production --port $PORT",
    "migrate:dev": "blitz prisma migrate dev --preview-feature",
    "migrate:deploy": "blitz prisma migrate deploy --preview-feature",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "prisma": "~2.17",
    "@prisma/client": "~2.17",
    "blitz": "0.30.1",
    "react": "0.0.0-experimental-3310209d0",
    "react-dom": "0.0.0-experimental-3310209d0",
    "react-error-boundary": "3.1.0",
    "typescript": "4.1.5",
    "zod": "1.11.11",
    "final-form": "4.20.1",
    "react-final-form": "6.5.2"
  },
  "devDependencies": {
    "@types/react": "17.0.2",
    "@types/preview-email": "2.0.0",
    "eslint": "7.20.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "preview-email": "3.0.3",
    "prettier-plugin-prisma": "0.4.0"
  },
  "private": true
}
